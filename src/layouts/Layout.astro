---
interface Props {
	title: string;
	description: string;
	keywords: string;
}

const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="Ignacio Basilio" />
		<link rel="icon" type="image/svg+xml" href="https://images.vexels.com/media/users/3/156564/isolated/preview/17d5864984c7b1463630558cda5033fd-icono-de-gafas-de-sol-de-lente-azul.png?width=320" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:image" content="https://images.vexels.com/media/users/3/156564/isolated/preview/17d5864984c7b1463630558cda5033fd-icono-de-gafas-de-sol-de-lente-azul.png?width=320" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="https://images.vexels.com/media/users/3/156564/isolated/preview/17d5864984c7b1463630558cda5033fd-icono-de-gafas-de-sol-de-lente-azul.png?width=320" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
	<style>
		@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

		*{
			margin: 0;
			padding: 0;
			box-sizing: border-box;
			font-family: 'Roboto', sans-serif;
		}
	</style>
</html>